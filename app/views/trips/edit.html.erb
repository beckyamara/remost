<%# OLD PAGE - NOW A MODAL IN TRIPS INDEX %>

<div class="container">
  <h1 class="mt-5">Edit your upcoming trip to <%= @trip.city.name.split(",").first %> <%= @trip.city.flag %></h1>
  <%= simple_form_for @trip do |f| %>
  <%# <%= f.association :city %>
  <%= f.input :destination,
              label: "Change destination",
              input_html: {data: {city_autocomplete_target: "address"}, class: "d-none"},
              wrapper_html: {data: {controller: "city-autocomplete", city_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, class: "form-control",
              required: true %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.button :submit, value: "Edit your trip", class: "btn btn-dark" %>
  <% end %>
</div>
