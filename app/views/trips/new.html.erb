
<div class="container">
  <div class="container trip-form-card">
    <div class="row">

    <div class="trip-form-card-left">
      <h1>Add an upcoming trip</h1>

      <%= simple_form_for @trip do |f| %>
      <%# <%= f.association :city %>
      <%= f.input :destination,
                  required: true,
                  input_html: {data: {city_autocomplete_target: "address"}, class: "d-none"},
                  wrapper_html: {data: {controller: "city-autocomplete", city_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, class: "form-control" %>
      <%= f.input :start_date,
                  as: :date,
                  input_html: {data: {trip_dates_calendar_target: "start_date_input"}, id: "start_date_input", onchange: "connect()"},
                  id: "start_date",
                  html5: true %>
      <%= f.input :end_date,
                  as: :date,
                  input_html: {data: {trip_dates_calendar_target: "end_date_input"}, class: "form-control", id: "end_date_input"},
                  id: "end_date",
                  html5: true %>
      <%= f.button :submit, value: "Add trip", class: "btn btn-dark" %>
      <% end %>
    </div>

    <div class="trip-form-card-right">
    </div>

  </div>
</div>
