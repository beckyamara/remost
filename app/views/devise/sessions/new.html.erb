<title><%= content_for(:title) ? "#{content_for(:title)} - remost" : "remost | Welcome back" %></title>

  <div class="row g-0 overflow-hidden">
    <div class="col-12 col-sm-6 col-lg-8">
      <div class="wrapper">
      <div class="form-login">
      <h2 class="mt-4 mb-5">Log in to your account</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "bob@remost.com",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: "••••••",
                      input_html: { autocomplete: "current-password" } %>
          <div class="forgot-password">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "shared-links" %>
            <% end %>
          </div>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-pink" %>
        </div>
      <% end %>

      </div>
    </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="new-here-wrapper">
        <div class="new-here-info">
          <h2 class="mt-4 mb-4">New here?</h2>
          <div class="margin-div">
            <p>Join your company workspace with a company code or set up a brand-new workspace for your company!</p>
            <div class="d-flex justify-content-between">
              <%= link_to "Join Workspace", step_path(:company), class: "btn-white" %>
              <%= link_to "Create Workspace", new_company_path, class: "btn-white" %>
            </div>
          </div>
        </div>
        <%= image_tag("mockup.png", id: "mockup-image", class: "mockup") %>
      </div>
    </div>
  </div>
