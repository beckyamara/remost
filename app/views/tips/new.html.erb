<div class="container">
  <h1 class="mt-5">Add a recommendation</h1>
  <%= simple_form_for [@city, @tip] do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :content %>
    <%= f.input :rating, input_html: { min: 0, max: 10 } %>
    <%= f.input :category, :collection => ["💻 Coworking","🍽️ Restaurant","☕ Café","🍹 Bar","👟 Sports","🎭 Culture","🎨 Art","🛐 Worship","🌆 Sight","🛡️ Safety"," Other" ] %>
    <%= f.submit "Submit a tip", class: "btn btn-dark" %>
  <% end %>
</div>
